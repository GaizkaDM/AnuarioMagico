{
    "info": {
        "_postman_id": "anuario-magico-collection",
        "name": "Anuario Magico API",
        "description": "Colección de endpoints para la API del Anuario Mágico (Backend Harry Potter).\n\nIncluye autenticación, gestión de personajes y herramientas administrativas.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"estudiante1\",\n    \"password\": \"alohomora\",\n    \"master_password\": \"HogwartsMaster\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        },
                        "description": "Registra un nuevo usuario. Requiere la contraseña maestra 'HogwartsMaster'."
                    },
                    "response": []
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"auth_token\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"estudiante1\",\n    \"password\": \"alohomora\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Inicia sesión y devuelve un token."
                    },
                    "response": []
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "{{auth_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "logout"
                            ]
                        },
                        "description": "Cierra la sesión invalidando el token."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Characters",
            "item": [
                {
                    "name": "Get All Characters",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/characters",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "characters"
                            ]
                        },
                        "description": "Obtiene la lista completa de personajes (filtrada y paginada internamente)."
                    },
                    "response": []
                },
                {
                    "name": "Get Favorites Only",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/characters?filter=favorites",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "characters"
                            ],
                            "query": [
                                {
                                    "key": "filter",
                                    "value": "favorites",
                                    "description": "Filtrar solo favoritos"
                                }
                            ]
                        },
                        "description": "Obtiene solo los personajes marcados como favoritos."
                    },
                    "response": []
                },
                {
                    "name": "Toggle Favorite",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"is_favorite\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/characters/:character_id/favorite",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "characters",
                                ":character_id",
                                "favorite"
                            ],
                            "variable": [
                                {
                                    "key": "character_id",
                                    "value": "harry-potter",
                                    "description": "ID del personaje (ej. slug)"
                                }
                            ]
                        },
                        "description": "Marca o desmarca un personaje como favorito."
                    },
                    "response": []
                },
                {
                    "name": "Get Character Image",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/characters/:character_id/image",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "characters",
                                ":character_id",
                                "image"
                            ],
                            "variable": [
                                {
                                    "key": "character_id",
                                    "value": "harry-potter"
                                }
                            ]
                        },
                        "description": "Obtiene la imagen del personaje (descarga o caché)."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "health"
                            ]
                        },
                        "description": "Comprueba el estado del servidor y la base de datos."
                    },
                    "response": []
                },
                {
                    "name": "Trigger Image Sync (Offline)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/admin/sync-images",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin",
                                "sync-images"
                            ]
                        },
                        "description": "Lanza la tarea en segundo plano para descargar todas las imágenes."
                    },
                    "response": []
                },
                {
                    "name": "Sync to MySQL",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/admin/sync-mysql",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin",
                                "sync-mysql"
                            ]
                        },
                        "description": "Sincroniza la base de datos local SQLite con MySQL."
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "",
            "type": "string"
        }
    ]
}